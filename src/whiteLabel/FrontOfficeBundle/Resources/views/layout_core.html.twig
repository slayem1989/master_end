{# src/whiteLabel/FrontOfficeBundle/Resources/views/layout_core.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#ffffff">

    {% image
    'bundles/whitelabelfrontoffice/images/favicon/apple-touch-icon.png'
    %}
    <link rel="apple-touch-icon" href="{{ asset_url }}" sizes="180x180">
    {% endimage %}

    {% image
    'bundles/whitelabelfrontoffice/images/favicon/favicon-32x32.png'
    'bundles/whitelabelfrontoffice/images/favicon/favicon-16x16.png'
    %}
    <link rel="icon" href="{{ asset_url }}" type="image/png" sizes="32x32">
    <link rel="icon" href="{{ asset_url }}" type="image/png" sizes="16x16">
    {% endimage %}

    {% image
    'bundles/whitelabelfrontoffice/images/favicon/safari-pinned-tab.svg'
    %}
    <link rel="mask-icon" href="{{ asset_url }}" color="#5bbad5">
    {% endimage %}

    {% image
    'bundles/whitelabelfrontoffice/images/favicon/manifest.json'
    %}
    <link rel="manifest" href="{{ asset_url }}">
    {% endimage %}

    <title>
        {% block title %}
            Espace Visiteur
        {% endblock %}
    </title>

    {% block stylesheets %}
        {{ include('whiteLabelFrontOfficeBundle:Core:stylesheets.html.twig') }}
    {% endblock %}
</head>
<body>
    {{ render(controller('whiteLabelFrontOfficeBundle:Core:layoutHeader')) }}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 bloc-content">
                    {{ include('whiteLabelMainBundle:Macros:error.html.twig') }}

                    {% block contents %}

                    {% endblock %}
                </div>
            </div>
        </div>
    </div>

    {#
    {{ render(controller('whiteLabelFrontOfficeBundle:Core:layoutFooter')) }}
    #}

    {% block javascripts %}
        {{ include('whiteLabelFrontOfficeBundle:Core:javascripts.html.twig') }}
    {% endblock %}
</body>
</html>
