           class="btn btn-primary btn-xs container_action"
           id="action_create"
           role="button"
           data-toggle="tooltip"
           data-placement="bottom"
           data-container="body"
           title="Importer un ModÃ¨le de Lettre"
        >
            <i class="glyphicon glyphicon-cloud-upload"></i>
        </a>
        {% endif %}
    </div>

{{ include('whiteLabelBackOfficeBundle:ModeleLettre:inc/list/table.html.twig') }}

</div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    {% javascripts
    'bundles/whitelabelbackoffice/js/modeleLettre/list/*.js'
    'bundles/whitelabelbackoffice/js/core/list/jquery_datatable.js'
    'bundles/whitelabelbackoffice/js/core/list/bootstrap_datatable.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}
