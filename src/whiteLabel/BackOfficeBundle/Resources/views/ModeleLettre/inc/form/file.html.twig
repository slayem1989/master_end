{# src/whiteLabel/BackOfficeBundle/Resources/views/ModeleLettre/inc/form/file.html.twig #}
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 bloc" id="bloc-file">
    <fieldset>
        <legend><span class="legend-icon"></span>&nbsp;A compl&eacute;ter</legend>

        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"></div>
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 form-error">{{ form_errors(form.typeBeneficiaire) }}</div>
        <div class="form-group">
            {{ form_label(form.typeBeneficiaire, "Type de bénéficiaire", {'label_attr': {'class': 'col-xs-12 col-sm-12 col-md-4 col-lg-4 control-label'}}) }}

            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                {{ form_widget(form.typeBeneficiaire) }}
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"></div>
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 form-error">{{ form_errors(form.nom) }}</div>
        <div class="form-group">
            {{ form_label(form.nom, "Nom du modèle", {'label_attr': {'class': 'col-xs-12 col-sm-12 col-md-4 col-lg-4 control-label'}}) }}

            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"></div>
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 form-error">
            {{ form_errors(form.file) }}
            <ul id="file-error"></ul>
        </div>
        <div class="form-group">
            {{ form_label(form.file, "Nom du fichier", {'label_attr': {'class': 'col-xs-12 col-sm-12 col-md-4 col-lg-4 control-label'}}) }}

            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                {{ form_widget(form.file) }}
            </div>
        </div>

        {% if modeleLettre and modeleLettre.fileUrl %}
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-xs-offset-0 col-sm-offset-0 col-md-offset-4 col-lg-offset-4">
            <p>
                <a href="{{ path('upload_read', {'clientId': clientId, 'uploadId': modeleLettre.id, 'fileKey': 1, 'extension': modeleLettre.fileUrl, 'folderKey': 1}) }}"
                   target="_blank"
                   data-toggle="tooltip"
                   data-placement="bottom"
                   data-container="body"
                   title="Télécharger le Modèle de Lettre"
                >
                    Voir le fichier
                </a>
            </p>
        </div>
        {% endif %}

    </fieldset>
</div>
