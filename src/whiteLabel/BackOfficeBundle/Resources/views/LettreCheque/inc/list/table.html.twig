{# src/whiteLabel/BackOfficeBundle/Resources/views/LettreCheque/inc/list/table.html.twig #}
<table cellspacing="0" id="table_lettreCheque" class="table table-striped table-bordered big_table">
    <thead>
    <tr>
        <th class="breakWord col0">Nom du mod&egrave;le</th>
        <th class="breakWord col1">Date d'int&eacute;gration</th>
        <th class="breakWord col2">Type de b&eacute;n&eacute;ficiaire</th>
        <th class="breakWord col3">Descriptif</th>
    </tr>
    </thead>

    <tbody>
    {% set typeArray = {
        '0 | particulier': 'Particulier',
        '1 | societe': 'Société',
        '': '-'
    } %}

    {% if list is not empty %}
        {% for item in list %}
        <tr>
            <td class="breakWord">
                <a href="{{ path('lettreCheque_read', {'clientId': clientId, 'lettreChequeId': item.lettreChequeId}) }}" title="link">
                    {{ item.lettreChequeNomModele }}
                </a>
            </td>
            <td class="textCenter">{{ item.lettreChequeDateIntegration|date('d/m/Y H:i:s') }}</td>
            <td class="breakWord">{{ typeArray[item.lettreChequeTypeBeneficiaire] }}</td>
            <td class="breakWord">
                {% if item and item.lettreChequeFileUrl %}
                <a href="{{ path('upload_read', {'uploadId': item.lettreChequeId, 'fileKey': 1, 'extension': item.lettreChequeFileUrl, 'folderKey': 1}) }}" target="_blank">
                    Voir le fichier
                </a>
                {% endif %}
            </td>
        </tr>
        {% endfor %}
    {% else %}
        <tr>
            <th colspan="4" class="textCenter">Aucune Lettre Ch&egrave;que enregistr&eacute;e.</th>
        </tr>
    {% endif %}
    </tbody>
</table>
