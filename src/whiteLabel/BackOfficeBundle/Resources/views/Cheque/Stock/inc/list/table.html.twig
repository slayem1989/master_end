{# src/whiteLabel/BackOfficeBundle/Resources/views/Cheque/Stock/inc/list/table.html.twig #}
<table cellspacing="0" id="table_stock" class="table table-striped table-bordered big_table">
    <thead>
        <tr>
            <th class="breakWord col0">Banque</th>
            <th class="breakWord col1">R&eacute;f&eacute;rence bo&icirc;te</th>
            <th class="breakWord col2">Ch&egrave;que d&eacute;but</th>
            <th class="breakWord col3">Ch&egrave;que fin</th>
            <th class="breakWord col4">Action</th>
        </tr>
    </thead>

    <tbody>
    {% if list is not empty %}
        {% for item in list %}
        <tr>
            <td class="breakWord">{{ item.banqueNom }}</td>
            <td class="breakWord">
                <a href="{{ path('chequeStock_read', {'clientId': clientId, 'stockId': item.stockId}) }}" title="link">
                    {{ item.stockReferenceBoite }}
                </a>
            </td>
            <td class="breakWord">{{ item.chequeFirst }}</td>
            <td class="breakWord">{{ item.chequeLast }}</td>
            <td class="textCenter">
                <a href="{{ path('chequeItem_list', {'clientId': clientId, 'stockId': item.stockId}) }}"
                   class="btn btn-primary btn-xs"
                   role="button"
                   data-toggle="tooltip"
                   data-placement="bottom"
                   data-container="body"
                   title="Consulter les ChÃ¨ques du stock"
                >
                    <i class="glyphicon glyphicon-credit-card"></i>
                </a>
            </td>
        </tr>
        {% endfor %}
    {% else %}
        <tr>
            <th colspan="4" class="textCenter">Aucun stock Ch&egrave;que enregistr&eacute;.</th>
        </tr>
    {% endif %}
    </tbody>
</table>
