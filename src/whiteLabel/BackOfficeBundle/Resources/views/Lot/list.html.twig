{# src/whiteLabel/BackOfficeBundle/Resources/views/Lot/list.html.twig #}
{% extends "whiteLabelBackOfficeBundle::layout_core.html.twig" %}

{% block stylesheet %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite'
    'bundles/whitelabelbackoffice/css/core/form/*.css'
    'bundles/whitelabelbackoffice/css/core/list/*.css'
    'bundles/whitelabelbackoffice/css/lot/list.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
{% endblock %}

{% block content %}
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 marginBottom40 marginTop50 paddingBottom15 hidden" id="mainWrapper">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 marginBottom40 noPadding" id="bloc_title">
        <h2>Liste des Lots</h2>
        <a href="{{ path('import_form', {'clientId': clientId}) }}"
           class="btn btn-primary btn-xs container_action"
           id="action_create"
           role="button"
           data-toggle="tooltip"
           data-placement="bottom"
           data-container="body"
           title="Importer un Lot"
        >
            <i class="glyphicon glyphicon-cloud-upload"></i>
        </a>
    </div>

{{ include('whiteLabelBackOfficeBundle:Lot:inc/list/table.html.twig') }}

</div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    {% javascripts
    'bundles/whitelabelbackoffice/js/lot/list/*.js'
    'bundles/whitelabelbackoffice/js/core/list/jquery_datatable.js'
    'bundles/whitelabelbackoffice/js/core/list/bootstrap_datatable.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}
