{# src/whiteLabel/MainBundle/Resources/views/User/inc/form/profil.html.twig #}
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 bloc">
    <fieldset>
        <legend class="marginTop20"><span class="legend-icon"></span>&nbsp;Profil</legend>

        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"></div>
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 form-error">{{ form_errors(form.roles) }}</div>
        <div class="form-group">
            {{ form_label(form.roles, "Profil", {'label_attr': {'class': 'col-xs-12 col-sm-12 col-md-4 col-lg-4 control-label'}}) }}

            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 custom-select">
                {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

    </fieldset>
</div>
