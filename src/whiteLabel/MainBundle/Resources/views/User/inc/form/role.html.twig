{# src/whiteLabel/MainBundle/Resources/views/User/inc/form/profil.html.twig #}
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 bloc">
    <fieldset>
        <legend class="marginTop20"><span class="legend-icon"></span>&nbsp;Profil</legend>
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"></div>
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 form-error">{{ form_errors(form.username) }}</div>
        <div class="form-group">
            {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': 'col-xs-12 col-sm-12 col-md-4 col-lg-4 control-label'}}) }}

            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                {{ form_widget(form.username, {'attr': {'class': 'form-control', "placeholder":"Nom d'utilisateur"}}) }}
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"></div>
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 form-error">{{ form_errors(form.firstname) }}</div>
        <div class="form-group">
            {{ form_label(form.firstname, "Pr√©nom", {'label_attr': {'class': 'col-xs-12 col-sm-12 col-md-4 col-lg-4 control-label'}}) }}

            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"></div>
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 form-error">{{ form_errors(form.lastname) }}</div>
        <div class="form-group">
            {{ form_label(form.lastname, "Nom", {'label_attr': {'class': 'col-xs-12 col-sm-12 col-md-4 col-lg-4 control-label'}}) }}

            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"></div>
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 form-error">{{ form_errors(form.email) }}</div>
        <div class="form-group">
            {{ form_label(form.email, "Email", {'label_attr': {'class': 'col-xs-12 col-sm-12 col-md-4 col-lg-4 control-label'}}) }}

            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder':'Email'}}) }}
            </div>
        </div>
    </fieldset>
</div>
